{
  "name": "portfolio",
  "version": "1.0.0-alpha.0",
  "description": "My Portfolio website",
  "author": "Kamontat Chantrachirathumrong",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lintfix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "clean": "rimraf .nuxt dist",
    "clean:all": "rimraf .nuxt dist yarn.lock node_modules",
    "e2e": "testcafe chrome ./test/**/*.test.js",
    "e2e:html:reporter": "testcafe chrome ./test/**/*.test.js --reporter html > test/results/report.html",
    "e2e:safari": "testcafe safari ./test/**/*.test.js",
    "e2e:all": "testcafe all ./test/**/*.test.js",
    "e2e:ci": "testcafe chrome:headless ./test/**/*.test.js --reporter xunit:test/results/unit-report.xml"
  },
  "dependencies": {
    "@nuxtjs/axios": "5.0.0",
    "@nuxtjs/pwa": "2.6.0",
    "nuxt": "2.3.4",
    "nuxt-i18n": "5.4.4",
    "nuxt-purgecss": "0.0.2"
  },
  "devDependencies": {
    "autoprefixer": "8.6.4",
    "babel-eslint": "8.2.6",
    "babel-polyfill": "6.26.0",
    "eslint": "5.9.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-loader": "2.1.1",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-vue": "4.7.1",
    "node-sass": "4.10.0",
    "nyc": "13.1.0",
    "prettier": "1.14.3",
    "rimraf": "2.6.2",
    "sass-loader": "7.1.0",
    "tailwindcss": "0.6.6",
    "testcafe": "0.23.2",
    "testcafe-reporter-html": "^1.3.0",
    "testcafe-reporter-xunit": "^2.1.0"
  }
}
