{
  "name": "portfolio",
  "version": "1.0.0-alpha.0",
  "description": "My Portfolio website",
  "author": "Kamontat Chantrachirathumrong",
  "private": true,
  "scripts": {
    "commit": "node ./scripts/js/commit.js",
    "clean": "rimraf .nuxt dist static/sw.js cypress/videos cypress/reports cypress/html-report",
    "clean:all": "yarn clean gh-pages/.vuepress/dist yarn.lock node_modules",
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "start-server": "yarn build && yarn start",
    "start-test": "cypress run --reporter mocha-multi-reporters --reporter-options configFile=cypress/config/mocha.json",
    "start-test:ci": "cypress run --reporter mocha-multi-reporters --reporter-options configFile=cypress/config/mocha.json --record --key $CYPRESS_KEY",
    "cypress:ui": "cypress open",
    "test": "start-server-and-test start-server http://localhost:3000 start-test",
    "test:ci": "start-server-and-test start-server http://localhost:3000 start-test:ci",
    "changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0 --output-unreleased",
    "gh-pages:dev": "vuepress dev gh-pages",
    "gh-pages:deploy": "vuepress build gh-pages && gh-pages --dist gh-pages/.vuepress/dist --message \"docs(gh-pages): Update landing page of the project. [skip ci]\" --add --dest docs",
    "release": "semantic-release"
  },
  "dependencies": {
    "@nuxtjs/axios": "5.0.0",
    "@nuxtjs/pwa": "2.6.0",
    "nuxt": "2.3.4",
    "nuxt-i18n": "5.4.4",
    "nuxt-purgecss": "0.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@semantic-release/changelog": "3.0.1",
    "@semantic-release/commit-analyzer": "6.1.0",
    "@semantic-release/git": "7.0.5",
    "@semantic-release/github": "5.2.5",
    "@semantic-release/release-notes-generator": "7.1.4",
    "ansi-colors": "3.2.2",
    "autoprefixer": "8.6.4",
    "babel-eslint": "8.2.6",
    "babel-polyfill": "6.26.0",
    "conventional-changelog-cli": "2.0.11",
    "cypress": "3.1.3",
    "enquirer": "2.1.1",
    "eslint": "5.9.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-loader": "2.1.1",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-vue": "4.7.1",
    "gh-pages": "2.0.1",
    "husky": "1.2.0",
    "jsdom": "13.0.0",
    "mocha": "5.2.0",
    "mocha-junit-reporter": "1.18.0",
    "mocha-multi-reporters": "1.1.7",
    "mochawesome": "3.1.1",
    "node-sass": "4.10.0",
    "nyc": "13.1.0",
    "prettier": "1.14.3",
    "rimraf": "2.6.2",
    "sass-loader": "7.1.0",
    "semantic-release": "15.12.4",
    "start-server-and-test": "1.7.11",
    "tailwindcss": "0.6.6",
    "vuepress": "0.14.8",
    "yargs": "12.0.5"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/git",
      [
        "@semantic-release/github",
        {
          "labels": ["semantic-release", "bot"],
          "releasedLabels": ["released", "bot", "production"]
        }
      ]
    ],
    "preset": "angular"
  }
}
